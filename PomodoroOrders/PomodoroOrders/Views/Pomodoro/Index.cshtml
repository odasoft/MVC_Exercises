@model PomodoroOrders.ViewModels.OrdenViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Pomodoro Express</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend> Haz tu orden!!</legend>

        <div class=" ">
            @Html.Label("Selecciona Bebida", new { id = "lblBebida" })
        </div>
        <div>

            @Html.DropDownList("ddlBebidas", Model.Bebidas)
        </div>
        <div class=" ">
            @Html.Label("Selecciona Combo", new { id = "lblCombo" })
        </div>
        <div>
            
            @Html.DropDownList("ddlCombo",Model.Combos)
        </div>
        
        
        <div class=" ">
            @Html.Label("Selecciona Platillos", new { id = "lblPlatillo" })
        </div>
        <div>

            @Html.DropDownList("ddlPlatillo",Model.Platillos)
        </div>

        <div class=" ">
            @Html.Label("Comentarios", new { id = "lblComentarios" })
        </div>
        <div>
           
            @Html.TextBox("txtComentarios")
        </div>
        <div>
            <input type="submit" value="Generar Orden" />
        </div>
        
    </fieldset>
}

